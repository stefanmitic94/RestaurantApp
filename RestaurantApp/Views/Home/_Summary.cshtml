@model Restaurant

<section class="card">
    <h3 class="card-header">@Model.Name</h3>
    <div class="card-block">
        Cuisine: @Model.Cuisine
    </div>
    <div class="panel-footer">
        <a class="btn btn-dark" asp-action="Details" asp-route-id="@Model.Id">Go!!!</a>
        <a class="btn btn-danger" asp-page="/Restaurants/Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</section>
